<!doctype html>
<html>
  <%- include('../../../partials/head.ejs') %>
  <body>
    <div class="container">
      <div class="row">
        <%- include('../../../partials/sidebar.ejs') %>

        <main>
          <h1><%=title%></h1>

          <% if (users_list.length) { %>
            <ul>
              <% users_list.forEach((user) => { %>
                <li>
                  <div>
                    <p><strong>Name: </strong><%=user.first_name%> <%=user.last_name%></p>
                    <a href="<%=user.url%>"><strong>User ID: </strong><%=user._id%></a>
                  </div>
                  <p>
                    <a href="<%=user.url%>/delete">Delete&nbsp;User</a> |
                    <a href="<%=user.url%>/update">Update&nbsp;User</a>
                  </p>
                </li>
              <% }) %>
            </ul>

          <% } else { %>
            <p>There are no current users.</p>
          <% } %>
        </main>
      </div>
    </div>
  </body>
</html>
