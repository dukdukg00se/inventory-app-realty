<!doctype html>
<html>
  <%- include('../../../partials/head.ejs') %>
  <body>
    <div class="container">
      <div class="row">
        <%- include('../../../partials/sidebar.ejs') %>

        <main>
          <h1><%=title%></h1>

          <form method="post">
            <h3>Primer Account Holder</h3>
            <div class="form-group">
              <label for="first_name">First Name:</label>
              <input
                id="first_name"
                name="first_name"
                class="form-control"
                type="text"
                placeholder="First name"
                required
                value="<%=(typeof user === 'undefined') ? '' : user.first_name%>"
              />
              <label for="last_name">Last Name:</label>
              <input
                id="last_name"
                name="last_name"
                class="form-control"
                type="text"
                placeholder="Last name"
                required
                value="<%=(typeof user === 'undefined') ? '' : user.last_name%>"
              />
              <label for="email">Email:</label>
              <input
                id="email"
                name="email"
                class="form-control"
                type="email"
                placeholder="example@gmail.com"
                required
                value="<%=(typeof user === 'undefined') ? '' : user.email%>"
              />
            </div>

            <div class="form-group">
              <label for="account">Account Type:</label>
              <select id="account" name="account" class="form-control">
                <option value="">--Please select account type--</option>
                <% ['Basic', 'Guided', 'White Glove'].forEach(type => { %>
                  <% if (typeof account !== 'undefined' && account.type === type) { %>
                    <option value="<%=type%>" selected><%=type%></option>
                  <% } else { %>
                    <option value="<%=type%>"><%=type%></option>
                  <% } %>
                <% }) %>
              </select>
            </div>

            <button type="submit">Submit</button>
          </form>

          <%- include('../../../partials/errors.ejs') %>
        </main>
      </div>
    </div>
  </body>
</html>
